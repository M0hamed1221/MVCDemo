@using Demo.Persentation.ViewModels.AccountViewModels
@model RestPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ResetPassword</h1>

<div class="main-w3layouts wrapper">
    <h1></h1>
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="RestPassword" method="post">
                <div asp-validation-summary="All">
                </div>
               
                <input asp-for="Password" placeholder="Password" required="">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
                
                <input type="submit" value="Rest Password">
            </form>
           
        </div>
    </div>

</div>

