@using Demo.Persentation.ViewModels.AccountViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Register</h1>

<div class="main-w3layouts wrapper">
    <h1></h1>
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="All">
                    
                </div>
                <input asp-for="FirstName" placeholder="First Name" required="">
                <br />,
                <input asp-for="LastName" placeholder="Last Name" required="">

                <input asp-for="UserName" placeholder="User Name" required="">

                <input asp-for="Email" placeholder="Email" required="">
                <input asp-for="Password" placeholder="Password" required="">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
                <div class="wthree-text">
                    <label class="anim">
                        <input type="checkbox" class="checkbox" asp-for="IsAgree" required="">
                        <span>I Agree To The Terms & Conditions</span>
                    </label>
                    <div class="clear"> </div>
                </div>
                <input type="submit" value="Register">
            </form>
            <p>Have an Account? <a asp-action="LogIn"> Login Now!</a></p>
        </div>
    </div>

</div>